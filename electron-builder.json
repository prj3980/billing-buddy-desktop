
{
  "appId": "com.billingbuddy.desktop",
  "productName": "Billing Buddy Desktop",
  "directories": {
    "output": "dist-electron",
    "buildResources": "electron/assets"
  },
  "files": [
    "dist/**/*",
    "electron/main.js",
    "electron/preload.js",
    "electron/assets/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "compression": "normal",
  "npmRebuild": false,
  "buildDependenciesFromSource": false
}
