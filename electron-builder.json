
{
  "appId": "com.billingbuddy.desktop",
  "productName": "Billing Buddy Desktop",
  "description": "A complete billing and inventory management system for hardware stores",
  "author": "Billing Buddy Team",
  "copyright": "Copyright Â© 2024 Billing Buddy Team",
  "directories": {
    "output": "dist-electron",
    "buildResources": "electron/assets"
  },
  "files": [
    "dist/**/*",
    "electron/main.js",
    "electron/preload.js",
    "electron/assets/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "compression": "normal",
  "npmRebuild": false,
  "buildDependenciesFromSource": false
}
