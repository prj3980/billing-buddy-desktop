
{
  "appId": "com.billingbuddy.desktop",
  "productName": "Billing Buddy Desktop",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron/main.js",
    "electron/preload.js"
